<!DOCTYPE html>
<html lang="en">
<%- include('../partials/_head') %>

<body>
  <%- include('../partials/_header') %>
  <section class="products-header">
    <h3>All Products</h3>
    <label><strong>Filter:&nbsp;&nbsp;</strong>
      <select id="filter-list">
        <option class="all-products" value="all-products">All Products</option>
      </select>
    </label>
   
  </section>
  <div class="products-divider"></div>
  <div class="products-container">
    <% for(let product of products){ %>
    <!--  -->
    <div class="product <%= product.category.toString().replace(' ', '-').toLowerCase()%>">
      <a href="/products/<%= product._id %>">
      <div class="image">
         <img src="<%= product.img %>" alt="" />
        <div class="image-overlay">
          <p>View Product</p>
        </div>
      </div>
    </a>
      <section>
        <p><%= product.name %></p>
        <p>$<%= product.price %></p>
      </section>
      <%if(admin){ %>
        <div class="buttons">
      <form method="POST" action="/products/<%= product._id %>?_method=DELETE">
        <button type="submit">Delete</button>
        </form>
        <a href="/products/<%= product._id %>/edit">
          <button >Edit</button></a>
        </div>
        <%}%>
    </div>
    <!--  -->
    
    <% } %> <%if(admin){ %>
    <div class="product">
      <a href="/products/create">Add New Product</a>
    </div>
    <%}%>



  </div>

  </div>
</body>

</html>
